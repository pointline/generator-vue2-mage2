<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <container name="root">
        <container name="base.body.start" as="base_body_start" before="-" label="Page Top"/>
        <container name="page.content" as="page_content" htmlTag="div" htmlClass="page-wrapper">
          <container name="main" label="Main Content Container" htmlTag="div" htmlClass="column main"/>
          <container name="base.body.end" as="base_body_end" after="-" label="Page Bottom"/>
      </container>
    </container>
</layout>
